{
    "extends": ["next", "next/core-web-vitals"],
    "plugins": ["react"],
  
    "rules": {
      // "max-len": [
      //   "error",
      //   {
      //     "code": 88,
      //     "comments": 86,
      //     "ignoreUrls": true,
      //     "ignoreTemplateLiterals": true,
      //     "ignorePattern": "^import\\s.+\\sfrom\\s.+;$"
